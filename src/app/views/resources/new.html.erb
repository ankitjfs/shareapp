<div class="container">

  <div class="row justify-content-center">

    <div class="col-5">

      <div class="mt-3">

        <h1 class="row justify-content-center"> Add Resource </h1>

      </div>
      <%= form_with model: @resource do |form| %>
        <input name="_method" type="hidden" value="post">
        <div class="form-group row mt-3">
          <%= form.label :name, "Name" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Resource name" %>

        </div>

        <div class="form-group row mt-3">

          <%= form.label :description, "Description" %>

          <%= form.text_field :description, class: "form-control", placeholder: "Enter Description" %>

        </div>


        <div class="form-group row mt-3">

          <%= form.submit "Add", class: "btn btn-primary" %>

        </div>

      <% end %>

    </div>

  </div>

</div>