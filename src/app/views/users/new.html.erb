<div class="container">

<div class="row justify-content-center">

  <div class="col-5">

<div class="mt-3">

<h1 class="row justify-content-center"> Sign Up </h1>

     </div>


<%= form_with model: @user, url: sign_up_path do |form| %>
      <input name="_method" type="hidden" value="post">
    <div class="form-group row mt-3">

      <%= form.label :work_email, "Email" %>

      <%= form.text_field :work_email, class: "form-control", placeholder: "Enter your work email" %>

    </div>

      <div class="form-group row mt-3">

        <%= form.label :first_name, "First name" %>

        <%= form.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>

      </div>

      <div class="form-group row mt-3">

        <%= form.label :last_name, "Last name" %>

        <%= form.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>

      </div>

      <div class="form-group row mt-3">

        <%= form.label :company_id, "company id" %>

        <%= form.text_field :company_id, class: "form-control", placeholder: "Select your company" %>

      </div>

<div class="form-group row mt-3">

  <%= form.label :password, "Password"%>

          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>

        </div>

  <div class="form-group row mt-3">

    <%= form.label :password_confirmation, "Confirm password" %>

          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Please enter the password again" %>

        </div>

    <div class="form-group row mt-3">

      <%= form.submit "Sign Up", class: "btn btn-primary" %>

        </div>

     <% end %>

   </div>

 </div>

</div>